{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "monorepo:pnpjs",
    ":rebaseStalePrs"
  ],
  "updateNotScheduled": true,
  "separateMinorPatch": true,
  "patch": {
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "minor": {
    "automerge": false
  },
  "major": {
    "enabled": false
  },
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
